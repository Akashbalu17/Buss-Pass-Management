<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Bus Pass ID Card</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
  <style>
    :root {
      --id-primary: #198754;
      --id-secondary: #11623d;
      --id-soft: #edf8f2;
      --id-border: #cfe9da;
    }
    body {
      background:
        radial-gradient(circle at 15% 18%, #d9f8e5 0%, transparent 38%),
        radial-gradient(circle at 90% 82%, #d4efff 0%, transparent 32%),
        linear-gradient(135deg, #eefcf3 0%, #f6fbff 52%, #edf9f2 100%);
      min-height: 100vh;
    }
    .id-shell { max-width: 980px; margin: 2rem auto; }
    .id-card {
      border-radius: 1rem;
      overflow: hidden;
      border: 1px solid var(--id-border);
      box-shadow: 0 18px 48px rgba(17, 84, 53, 0.16);
    }
    .id-header {
      background: linear-gradient(135deg, var(--id-primary) 0%, var(--id-secondary) 100%);
      color: #fff;
      position: relative;
      overflow: hidden;
    }
    .id-header::after {
      content: "";
      position: absolute;
      inset: 0;
      background: radial-gradient(circle at 82% 18%, rgba(255, 255, 255, 0.2) 0%, transparent 35%);
      pointer-events: none;
    }
    .id-photo {
      width: 165px;
      height: 205px;
      object-fit: cover;
      border-radius: 10px;
      border: 4px solid var(--id-primary);
      box-shadow: 0 10px 20px rgba(25, 135, 84, 0.2);
    }
    .meta-chip {
      border-radius: 0.7rem;
      border: 1px solid var(--id-border);
      background: #fff;
      padding: 0.7rem 0.8rem;
      height: 100%;
    }
    .meta-label { color: var(--id-primary); font-size: 0.74rem; font-weight: 700; text-transform: uppercase; letter-spacing: 0.45px; }
    .meta-value { font-size: 1rem; font-weight: 700; color: #123928; }
    .label-icon { margin-right: 0.35rem; font-size: 0.82rem; vertical-align: -1px; }
    .ico-name { color: #0ea5e9; }
    .ico-father { color: #f97316; }
    .ico-dob { color: #8b5cf6; }
    .ico-gender { color: #ec4899; }
    .ico-type { color: #14b8a6; }
    .ico-inst { color: #22c55e; }
    .ico-route { color: #2563eb; }
    .ico-app { color: #f59e0b; }
    .ico-issue { color: #10b981; }
    .ico-exp { color: #ef4444; }
    @media print {
      .no-print { display: none !important; }
      body { background: #fff; }
      .id-shell { margin: 0; max-width: 100%; }
      .card { border: 0 !important; box-shadow: none !important; }
    }
  </style>
</head>
<body>
  <div class="container id-shell">
    <div class="text-center mb-4">
      <h1 class="h3 fw-bold mb-1 text-success">Digital Bus Pass ID Card</h1>
      <p class="mb-0 text-muted">Tamil Nadu State Transport Corporation</p>
    </div>

    <div class="card id-card">
      <div class="card-header id-header py-4">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
          <div>
            <h2 class="h4 mb-1">BUS PASS ID CARD</h2>
            <div class="small opacity-75">Official Student Identification</div>
          </div>
          <span class="badge bg-light text-success fs-6">VALID</span>
        </div>
      </div>

      <div class="card-body p-4 p-md-5">
        <div class="row g-4">
          <div class="col-md-3 text-center">
            <img src="/<%= appData.studentPhoto %>" alt="Student Photo" class="id-photo" onerror="this.src='https://via.placeholder.com/165x205?text=Photo'" />
            <div class="mt-3 p-2 border rounded-3" style="background: var(--id-soft);">
              <div class="meta-label"><i class="bi bi-person-vcard-fill label-icon ico-app"></i>Bus Pass ID</div>
              <div class="fw-bold text-success"><%= appData.idNumber || appData.applicationNo %></div>
            </div>
            <span class="badge rounded-pill text-bg-success mt-2 px-3 py-2">Approved</span>
          </div>

          <div class="col-md-9">
            <div class="row g-3">
              <div class="col-md-6"><div class="meta-chip"><div class="meta-label"><i class="bi bi-person-fill label-icon ico-name"></i>Student Name</div><div class="meta-value"><%= appData.studentName || "-" %></div></div></div>
              <div class="col-md-6"><div class="meta-chip"><div class="meta-label"><i class="bi bi-people-fill label-icon ico-father"></i>Father / Guardian</div><div class="meta-value"><%= appData.fatherName || "-" %></div></div></div>
              <div class="col-md-6"><div class="meta-chip"><div class="meta-label"><i class="bi bi-calendar-event-fill label-icon ico-dob"></i>Date of Birth</div><div class="meta-value"><%= appData.dob ? new Date(appData.dob).toLocaleDateString("en-IN") : "-" %></div></div></div>
              <div class="col-md-6"><div class="meta-chip"><div class="meta-label"><i class="bi bi-gender-ambiguous label-icon ico-gender"></i>Gender</div><div class="meta-value"><%= appData.gender || "-" %></div></div></div>
              <div class="col-md-6"><div class="meta-chip"><div class="meta-label"><i class="bi bi-diagram-3-fill label-icon ico-type"></i>Institution Type</div><div class="meta-value"><%= appData.institutionType || "-" %></div></div></div>
              <div class="col-md-6"><div class="meta-chip"><div class="meta-label"><i class="bi bi-building-fill label-icon ico-inst"></i>Institution Name</div><div class="meta-value"><%= institutionName %></div></div></div>
              <div class="col-md-6"><div class="meta-chip"><div class="meta-label"><i class="bi bi-geo-alt-fill label-icon ico-route"></i>Route From</div><div class="meta-value"><%= appData.startRoute || "-" %></div></div></div>
              <div class="col-md-6"><div class="meta-chip"><div class="meta-label"><i class="bi bi-flag-fill label-icon ico-route"></i>Route To</div><div class="meta-value"><%= appData.endRoute || "-" %></div></div></div>
            </div>
          </div>
        </div>

        <div class="row g-3 mt-4">
          <div class="col-md-4"><div class="meta-chip"><div class="meta-label"><i class="bi bi-hash label-icon ico-app"></i>Application No</div><div class="meta-value"><%= appData.applicationNo || "-" %></div></div></div>
          <div class="col-md-4"><div class="meta-chip"><div class="meta-label"><i class="bi bi-calendar-check-fill label-icon ico-issue"></i>Issue Date</div><div class="meta-value"><%= issueDate %></div></div></div>
          <div class="col-md-4"><div class="meta-chip"><div class="meta-label"><i class="bi bi-calendar-x-fill label-icon ico-exp"></i>Expiry Date</div><div class="meta-value"><%= expiryDate %></div></div></div>
        </div>
      </div>
    </div>

    <div class="d-flex flex-wrap gap-2 justify-content-center mt-3 no-print">
      <button class="btn btn-success" onclick="window.print()">Print ID Card</button>
      <a class="btn btn-outline-success" href="/id/download/<%= encodeURIComponent(appData.applicationNo) %>">Download ID PDF</a>
      <a class="btn btn-secondary" href="/status">Back to Status</a>
    </div>
  </div>
</body>
</html>
